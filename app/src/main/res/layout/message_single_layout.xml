<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:text="your message here"
        android:padding="15dp"
        android:visibility="visible"
        android:layout_marginLeft="10sp"
        android:id="@+id/message_text_layout"
        android:layout_height="45sp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/message_sky_blue_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_date_layout"
        android:text="00:00"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/message_image_layout"
        android:layout_alignLeft="@+id/message_text_layout"
        android:layout_alignStart="@+id/message_text_layout" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_text_layout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible"
        android:layout_marginRight="11dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="11dp"
        android:id="@+id/message_image_layout" />


</RelativeLayout>