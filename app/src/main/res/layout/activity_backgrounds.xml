<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arn.gab.BackgroundsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bg1"
                android:onClick="backGround1"
                android:layout_width="match_parent"
                android:layout_height="500sp"
                android:src="@drawable/file24"
                android:layout_margin="30sp"
                />

            <ImageView
                android:id="@+id/bg2"
                android:onClick="backGround2"
                android:layout_width="match_parent"
                android:layout_height="500sp"
                android:src="@drawable/file25"
                android:layout_margin="30sp"
                />

            <ImageView
                android:id="@+id/bg3"
                android:onClick="backGround3"
                android:layout_width="match_parent"
                android:layout_height="500sp"
                android:src="@drawable/file27"
                android:layout_margin="30sp"
                />

            <ImageView
                android:id="@+id/bg4"
                android:onClick="backGround4"
                android:layout_width="match_parent"
                android:layout_height="500sp"
                android:src="@drawable/file18"
                android:layout_margin="30sp"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
