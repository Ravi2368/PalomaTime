<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="36dp"
        android:src="@drawable/default_image"
        android:layout_height="36dp"
        android:id="@+id/custom_bar_image"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="23dp"
        android:layout_marginTop="10dp"
        android:layout_height="23dp"
        android:onClick="changeMessageBackground"
        android:src="@drawable/settings_button"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/custom_bar_image"
        android:layout_toStartOf="@+id/custom_bar_image"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custom_bar_title"
        android:text="Name"
        android:layout_marginLeft="10sp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:layout_alignTop="@+id/custom_bar_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="seen status"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        android:id="@+id/custom_bar_seen"
        android:textSize="13sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/custom_bar_title" />

</RelativeLayout>